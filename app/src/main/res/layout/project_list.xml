<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/project_list"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/image"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="프로젝트 이름"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/name" android:layout_weight="1"
            app:layout_constraintStart_toEndOf="@+id/image" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="상"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prize" app:layout_constraintStart_toEndOf="@+id/name"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="내용"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/competition" app:layout_constraintStart_toEndOf="@+id/image"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="행사이름"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/competition" app:layout_constraintStart_toEndOf="@+id/image"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/name"/>
</androidx.constraintlayout.widget.ConstraintLayout>